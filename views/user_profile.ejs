<%- include('templates/header'); %>
    <div class="form-container">
        <img class="profile-picture" src="/path/to/your/profile/image.jpg" alt="Profile Picture">
        <form action="/update_profile" method="POST">
            <label for="name">Name</label>
            <input class="input-field" type="text" id="name" name="name" placeholder="Name"
                value="<%= user.username %>">

            <label for="email">Email</label>
            <input class="input-field" type="email" id="email" name="email" placeholder="Email"
                value="<%= user.email %>">

            <label for="phone">Phone</label>
            <input class="input-field" type="tel" id="phone" name="phone" placeholder="Phone" pattern="[0-9]{1,12}"
                title="Phone number must be up to 12 digits">

            <label for="address">Address</label>
            <input class="input-field" type="text" id="address" name="address" placeholder="Address"
                value="<%= user.address %>">

            <button type="submit" class="submit-button">Save Changes</button>
        </form>
        <a href="/user_account" class="back-link">Back to Account</a>
    </div>
    <%-include('templates/menuBar')%>

        <%-include('templates/footer')%>