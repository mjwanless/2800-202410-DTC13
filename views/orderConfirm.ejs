<%- include('templates/header'); %>
<%- include("templates/backBtn") %>
<h2 class="text-4xl font-bold text-center py-2 text-blue-950">Confirmation</h2>
<!--order confimation card-->
<div class="relative flex grid justify-center top-20">
    <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow">
        <a href="#">
            <img class="rounded-t-lg" src="1.jpg" alt="" />
        </a>
        <div class="p-5">
            <a href="#">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gra">Order Number: <%= orderId %></h5>
            </a><br>
            <p class="mb-3 font-normal text-gray-700">Delivery Date: <%= deliveryDate %> </p>
