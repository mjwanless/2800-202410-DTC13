<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set Your Preferences</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto mt-10">
        <div class="bg-white p-8 rounded shadow-md">
            <h1 class="text-2xl font-bold mb-5">Set Your Preferences</h1>
            <div class="mb-4">
                <input type="text" id="preferenceInput" class="p-2 border rounded w-full" placeholder="Enter a preference">
            </div>
            <div class="mb-4 flex space-x-2">
                <button onclick="addPreference()" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
                <button onclick="completePreferences()" class="bg-green-500 text-white px-4 py-2 rounded">Complete</button>
                <button onclick="skipPreferences()" class="bg-gray-500 text-white px-4 py-2 rounded">Skip</button>
            </div>
            <div id="preferenceList" class="flex flex-wrap space-x-2"></div>
        </div>
    </div>
    <script>
        let preferences = [];

        function addPreference() {
            const input = document.getElementById('preferenceInput');
            const value = input.value.trim();
            if (value && !preferences.includes(value)) {
                preferences.push(value);
                updatePreferenceList();
                input.value = '';
            }
        }
        
        function updatePreferenceList() {
            const list = document.getElementById('preferenceList');
            list.innerHTML = '';
            preferences.forEach(pref => {
                const chip = document.createElement('span');
                chip.className = 'bg-blue-200 text-blue-700 px-3 py-1 rounded-full';
                chip.textContent = pref;
                list.appendChild(chip);
            });
        }
        
        function completePreferences() { 
            console.log( preferences );
            axios.post('http://localhost:3000/save_preferences', { preferences })
                .then(response => {
                    window.location.href = '/home';
                    console.log(response.data);
                })
                .catch(error => {
                    console.error('Error saving preferences:', error);
                });
                console.log( {preferences});
        }

        function skipPreferences() {
            window.location.href = '/home';
        }
    </script>
</body>
</html>
