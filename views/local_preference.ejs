<%- include('templates/header'); %>
<%- include('templates/backBtn'); %>

<div class="bg-orange-50 min-h-screen py-10">
    <div class="bg-orange-50 p-8 rounded shadow-md w-full max-w-lg mx-auto">
        <h3 class="text-2xl font-bold mb-5 text-blue-950">Edit Your Preferences</h3>
        <div class="mb-4">
            <input type="text" id="preferenceInput" class="p-2 border rounded w-full" placeholder="Enter a preference">
        </div>
        <div class="mb-4 flex justify-center">
            <button onclick="addPreference()" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
        </div>
        <div id="preferenceList" class="flex flex-wrap gap-2 mb-4">
            <% if (user.preferences && user.preferences.length > 0) { %>
                <% user.preferences.forEach(function(pref) { %>
                    <div class="relative bg-indigo-50 text-blue-950 px-3 py-1 rounded-full">
                        <button class="absolute top-0 left-0 text-orange-500 font-bold text-lg" style="transform: translate(-50%, -50%);" onclick="confirmDeletePreference('<%= pref %>')">&times;</button>
                        <%= pref %>
                    </div>
                <% }) %>
            <% } %>
        </div>
        <div class="mt-10 text-center">
            <button onclick="savePreferences()" class="bg-orange-500 text-white px-4 py-2 rounded">Save</button>
        </div>
    </div>
</div>

<!-- Menubar -->
<%- include('templates/menuBar'); %>
<%- include('templates/footer'); %>

<script>
    let preferences = [];

    document.addEventListener('DOMContentLoaded', () => {
        // Initialize preferences from server-rendered data
        const prefElements = document.querySelectorAll('#preferenceList div');
        prefElements.forEach(element => {
            preferences.push(element.textContent.trim());
        });
    });

    function addPreference() {
        const input = document.getElementById('preferenceInput');
        const value = input.value.trim();
        if (value && !preferences.includes(value)) {
            preferences.push(value);
            updatePreferenceList();
            input.value = '';
        }
    }

    function confirmDeletePreference(preference) {
        if (confirm(`Are you sure you want to delete the preference "${preference}"?`)) {
            deletePreference(preference);
        }
    }

    function deletePreference(preference) {
        preferences = preferences.filter(p => p !== preference);
        updatePreferenceList();
    }

    function updatePreferenceList() {
        const list = document.getElementById('preferenceList');
        list.innerHTML = '';
        preferences.forEach(pref => {
            const chip = document.createElement('div');
            chip.className = 'relative bg-indigo-50 text-blue-950 px-3 py-1 rounded-full';
            chip.innerHTML = `
                <button class="absolute top-0 left-0 text-orange-500 font-bold text-lg" style="transform: translate(-50%, -50%);" onclick="confirmDeletePreference('${pref}')">&times;</button>
                ${pref}
            `;
            list.appendChild(chip);
        });
    }

    function savePreferences() {
        axios.post('/save_preferences', { preferences })
            .then(response => {
                window.location.href = '/user_account';
            })
            .catch(error => {
                console.error('Error saving preferences:', error);
            });
    }
</script>

<style>
    .preference-bubble {
        transition: transform 0.3s, background-color 0.3s, border-color 0.3s;
        position: relative;
        background-color: rgba(255, 247, 237, 0.5); /* Light transparent orange */
        overflow: hidden; /* Prevent bubbles from overlapping */
    }
    .preference-bubble:hover {
        transform: scale(1.1);
    }
    .preference-bubble .delete-button {
        position: absolute;
        top: -5px;
        left: -5px;
        color: #EA580C; /* Orange color */
        font-weight: bold;
        font-size: 20px;
        background: white;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        border: 2px solid #EA580C; /* Optional: add border to the delete button */
    }
</style>
