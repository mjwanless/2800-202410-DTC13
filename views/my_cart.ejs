<%- include('templates/header'); %>

<div class="max-w-md mx-auto bg-white rounded-xl overflow-hidden md:max-w-2xl mt-10">
    <h1 class="text-center text-2xl font-bold text-blue-800 my-4">My Cart</h1>

    <% if (!recipeDetails || recipeDetails.length === 0) { %>
        <p class="text-center text-red-500">Your cart is empty.</p>
    <% } else { 
        let recipeTally = {};
        recipeDetails.forEach(recipe => {
            if (recipe && recipe.label) {
                if (recipeTally[recipe.label]) {
                    recipeTally[recipe.label].count++;
                } else {
                    recipeTally[recipe.label] = {
                        ...recipe,
                        count: 1
                    };
                }
            }
        });
    %>
        

        <% let i = 0 %>
        <% Object.keys(recipeTally).forEach(recipeLabel => {
            let recipe = recipeTally[recipeLabel];
        %>
            <div class="md:flex bg-orange-50  rounded-md overflow-hidden m-4">
                <div class="md:flex-shrink-0">
                    <img src="<%= recipe.image %>" class="h-48 w-full object-cover md:w-48" alt="Recipe image">
                </div>
                <div class="p-8 flex-grow">
                    <div class="flex items-center justify-between">
                        <h2 class="font-bold text-2xl text-blue-800"><%= recipe.label %></h2>
                        <!-- <span class="font-bold text-gray-800">x<%= recipe.count %></span> -->
                    </div>
                    <% recipe.ingredientLines.forEach(ingredient => { %>
                        <p class="mt-2 text-gray-600"><%= ingredient %></p>
                    <% }) %>
                    <div class="flex justify-between items-center my-4">
                        <span class="font-bold text-lg">Total:</span>
                        <!-- <span class="font-bold text-blue-950 text-lg">$<%= (recipe.totalNutrients.ENERC_KCAL.quantity * recipe.count).toFixed(2) %></span> -->
                        <span class="font-bold text-blue-950 text-lg"  id="price_<%= priceList[i].recipeId%>">$<%= (priceList[i].price * priceList[i].quantity).toFixed(2) %></span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button class="bg-indigo-50 text-blue-950 rounded px-2" data-recipe-label="<%= recipe.label %>" onclick="decreaseQuantity('<%= priceList[i].recipeId%>', '<%= priceList[i].price%>')">-</button>
                        <span id="text_<%= priceList[i].recipeId%>"><%= priceList[i].quantity %></span>
                        <button class="bg-orange-500 text-white rounded px-2" data-recipe-label="<%= recipe.label %>" onclick="increaseQuantity('<%= priceList[i].recipeId%>', '<%= priceList[i].price%>')">+</button>
                    </div>
                </div>
            </div>
            <% i++ %>
        <% }); %>
        
        <div class="flex justify-center my-4">
            <a href="/payment" class="bg-blue-800 text-white px-4 py-2 rounded-md">Proceed to Payment</a>
        </div>
    <% } %>
</div>

<%- include('templates/menuBar'); %>

<script>

function processPayment(){
    fetch("/mycart", {
        method: 'POST',
    }).then(response => {
        if (response.ok) {
            console.log('start payment');
        }
    }
    )
}
</script>

