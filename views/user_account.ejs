<%- include('templates/header'); %>

<div class="bg-light-blue min-h-screen flex flex-col items-center justify-start pt-4">
    <div class="flex items-center space-x-4 w-full max-w-xs px-4">
        <img src="/profileimg.png" alt="Profile Picture" class="w-16 h-16 rounded-full">
        <div>
            <h2 class="font-semibold text-blue-950"><%= user.username %></h2>
            <p class="text-sm text-gray-600"><%= user.email %></p>
        </div>
        <a href="/user_profile" class="text-orange-500 hover:underline text-sm">Edit</a>
    </div>
    

    <div class="py-8 w-full max-w-md">
        <div class="grid grid-cols-3 gap-4 text-center" >
            <div class="flex flex-col items-center">
                <div class="bg-orange-50 p-8 rounded-full mb-3">
                    <i class="fas fa-heart text-orange-500"></i>
                </div>
                <span class="text-gray-900 font-semibold">Favorites</span>
            </div>
            <div class="flex flex-col items-center">
                <div class="bg-orange-50 p-8 rounded-full mb-3">
                    <i class="fas fa-sliders-h text-orange-500"></i>
                </div>
                <span class="text-gray-900 font-semibold">Preference</span>
            </div>
            <div class="flex flex-col items-center">
                <div class="bg-orange-50 p-8 rounded-full mb-3">
                    <i class="fas fa-star text-orange-500"></i>
                </div>
                <span class="text-gray-900 font-semibold">Membership</span>
            </div>
        </div>
    </div>

    <div class="w-full max-w-md p-4 text-center space-y-4">
        <div><i class="fas fa-bullhorn"></i> Promotions</div>
        <div><i class="fas fa-info-circle"></i> About</div>
        <div><i class="fas fa-cog"></i> Settings</div>
        <div onclick="confirmSignOut()" class="cursor-pointer text-red-500"><i class="fas fa-sign-out-alt"></i> Sign Out</div>
    </div>

    <div class="w-full max-w-md mt-6">
        <hr class="border-t-2 border-orange-300">
        <h2 class="text-lg font-semibold mt-2">Order History</h2>
        <!-- Order History Items Here -->
    </div>
</div>

<%- include('templates/menuBar'); %>
<%- include('templates/footer'); %>

<script>
function confirmSignOut() {
    if (confirm("Are you sure you want to sign out?")) {
        req.session.destroy();
        res.clearCookie("connect.sid", { path: "/" });
        window.location.href = '/login';
    }
}
</script>
